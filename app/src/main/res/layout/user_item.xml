<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10sp">


    <ImageView
        android:id="@+id/user_list_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/list_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/user_list_icon"
        android:layout_toEndOf="@id/user_list_icon"
        android:text="TextView"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:textSize="18sp"
        android:textColor="@color/colorLight"/>

    <ImageView
        android:id="@+id/online_token"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignBottom="@+id/user_list_icon"
        android:layout_toEndOf="@+id/user_list_icon"
        android:layout_toRightOf="@+id/user_list_icon"
        android:layout_marginLeft="7dp"
        android:background="@drawable/online_token"
        android:layout_marginStart="-7dp"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/offline_token"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignBottom="@+id/user_list_icon"
        android:layout_toEndOf="@+id/user_list_icon"
        android:layout_toRightOf="@+id/user_list_icon"
        android:layout_marginLeft="7dp"
        android:background="@drawable/offline_token"
        android:layout_marginStart="-7dp"
        android:visibility="gone"/>



</RelativeLayout>